@model IEnumerable<Monotoring.Models.DelayComment>

@{
    ViewBag.Title = "Comentarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<hr />

    @foreach (var item in Model)
    {
        count++;
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-lg bg-success">
                    <p>@item.Comment</p>
                    <p class="text-right"><i>@item.dateComment</i></p>
                </div>
            </div>
        </div>
    }

@if (count == 0)
{
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="jumbotron">
                <h1 class="text-left">No cuenta con ningún comentario.</h1>

            </div>
        </div>
    </div>
}

