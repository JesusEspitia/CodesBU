@model Monotoring.Models.DelayCode

@{
    ViewBag.Title = "Editar - Código de retraso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar código de retraso</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DelayCodeId)

        <div class="form-group">
            @Html.LabelFor(model => model.DelayName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DelayName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DelayName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Regresar a la lista", "Index")*@
    <ul class="pager">
        <li class="previous"><a href="/Config/"><span aria-hidden="true">&larr;</span>Regresar</a></li>
    </ul>
</div>
