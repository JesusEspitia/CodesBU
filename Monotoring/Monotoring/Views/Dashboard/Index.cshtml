@using Monotoring.Models
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Dashboard <span class="glyphicon glyphicon-blackboard"></span><small>(Resumen)</small></h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Ordenes en ejecucíon <span class="badge">@ViewBag.Orden.Count</span></h2>
                </div>   
                <div class="panel-body">
                    <p></p>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>No. Batch</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Fecha de arranque</th>
                                <th>Días transcurridos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(WorkOrden item in ViewBag.Orden)
                            {
                                <tr>
                                    <td>
                                        @item.BatchOrden
                                    </td>
                                    <td>
                                        @item.Catalog.CatalogDescrip
                                    </td>
                                    <td>
                                        @item.quantityOrden
                                    </td>
                                    <td>
                                        @item.dateStart
                                    </td>
                                    <td>
                                        @Math.Round((DateTime.Now - (DateTime)item.dateStart).TotalDays,0)                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>