@model IEnumerable<Monotoring.Models.Area>

@{
    ViewBag.Title = "Áreas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Áreas</h2>

<p>
    @Html.ActionLink("Área nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.daysMax)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripArea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.daysMax)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AreaId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.AreaId })
        </td>
    </tr>
}

</table>

<ul class="pager">
    <li class="previous"><a href="/Admin/"><span aria-hidden="true">&larr;</span>Regresar</a></li>
</ul>