@model CandidateTest.Models.Form

@{
    ViewBag.Title = "Detail";
    string val1 = "";
    string val2 = "";
    string val3 = "";
    string val4 = "";
    string val5 = "";
    string val6 = "";
    string val7 = "";
    string val8 = "";
    string val9 = "";
    string val10 = "";
}

<div class="page-header">
    <h1 class="text-center text-primary">Behavioral Success Factors Scorecard</h1>
</div>
<hr>
<div class="row">
    <div class="col-sm-offset-2">       
        <ul class="pager">
            <li class="previous"><a href="/"><span aria-hidden="true">&larr;</span>Back</a></li>
        </ul>
    </div>
</div>
<br />
<div class="">
    <!--Candidate information-->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="candidatename">Candidate´s Name</label>
                <input type="text" id="candidatename" class="form-control" name="Candidate" style="max-width:none;" required="required" value="@Model.Candidate" readonly>

            </div>
        </div>
    </div>
    @Html.ValidationMessage("Candidate")
    <div class="row">
        <div class="col-sm-5 col-sm-offset-2">
            <div class="form-group">
                <label for="position">Position</label>
                <input type="text" id="position" class="form-control" name="Positiion" style="max-width:none;" required="required" value="@Model.Positiion" readonly>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label for="interview">Interview</label>
                <input type="text" id="interview" class="form-control" name="Interview" style="max-width:none;" required="required" value="@Model.InterviewDate" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-sm-offset-2">
            <div class="form-group">
                <label for="hr">HR Rep.</label>
                <select name="HR_rep" id="hr" class="form-control" style="max-width:none;" required="required" value="@Model.HR_rep" readonly>
                    <option value="Martinez,Cristian">Martinez,Cristian</option>
                    <option value="Marmolejo,Griselda">Marmolejo,Griselda</option>
                    <option value="Santillan,Ana">Santillan,Ana</option>
                </select>
            </div>
        </div>
        <div class="col-sm-2 col-sm-offset-1">
            <div class="form-group">
                <label for="type"></label>
                <select name="candidate_type" id="type" class="form-control" style="max-width:none;" required="required" value="@Model.candidate_type" readonly>
                    <option value="Internal Candidate">Internal Candidate</option>
                    <option value="External Candidate">External Candidate</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-7 col-sm-offset-2">
            <div class="form-group">
                <label for="manager">Hiring Manager(e-mail)</label>
                <input type="text" id="manager" class="form-control" name="manager_email" style="max-width:none;" required="required" value="@Model.manager_email" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <p><strong>To complete the scorecard, please simply do the following:</strong></p>
            <blockquote>
                <ol>
                    <li>Read the success definition for each factor.</li>
                    <li>Select the most appropriate description for the factor based on your assessment of the employee during the interview process.</li>
                    <li>Please be prepared to substantiate you evaluations with examples from your interviews</li>
                </ol>
            </blockquote>
        </div>
    </div>
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!--Questions begin-->
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q1">Technical Skills</label>
                @switch (Model.question1)
                {
                    case "10":
                        val1 = "Does not Meet Expectations. Below standards.";
                        break;
                    case "20":
                        val1 = "Partially Meets Expectations. Can do work but needs added support.";
                        break;
                    case "30":
                        val1 = "Meets Expectations. Can perform all required very well.";
                        break;
                    case "40":
                        val1 = "Exceeds Expectations. Does more, better, faster.";
                        break;
                    case "50":
                        val1 = "Exceptional. Leader in the field. Sets the bar.";
                        break;
                }
                <input type="text" id="q1" class="form-control"  style="max-width:none;" required="required" value="@val1" readonly>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q2">Motivated to do the work"</label>
                @switch (Model.question2)
                {
                    case "10":
                        val2 = "Does not Meet Expectations. Doesn’t do the work.";
                        break;
                    case "20":
                        val2 = "Partially Meets Expectations. Will do the work if supervised.";
                        break;
                    case "30":
                        val2 = "Meets Expectations. Self-motivated to do this type of work.";
                        break;
                    case "40":
                        val2 = "Exceeds Expectations. Takes initiative to do more, better, faster.";
                        break;
                    case "50":
                        val2 = "Exceptional. Totally committed to getting it done.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val2" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q3">Team Skills in Similar Gruops</label>
                @switch (Model.question3)
                {
                    case "10":
                        val3 = "Does not Meet Expectations. Does not cooperate with others.";
                        break;
                    case "20":
                        val3 = "Partially Meets Expectations.  Will cooperate if asked. Needs close supervision.";
                        break;
                    case "30":
                        val3 = "Meets Expectations. Fully Cooperates. Handles conflict.";
                        break;
                    case "40":
                        val3 = "Exceeds Expectations. Takes initiative to help others. Motivates.";
                        break;
                    case "50":
                        val2 = "Exceptional. Inspires, coaches. Asked to lead.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val3" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q4">Problem Solving and Quality of Things</label>
                @switch (Model.question4)
                {
                    case "10":
                        val4 = "Does not Meet Expectations. Misunderstood issues. Doesn’t provide solutions.";
                        break;
                    case "20":
                        val4 = "Partially Meets Expectations.  Scarcely understood issues. Provides weak solutions.";
                        break;
                    case "30":
                        val4 = "Meets Expectations.  Understood all issues and has good solutions.";
                        break;
                    case "40":
                        val4 = "Exceeds Expectations. Quickly understood issues, with great solutions.";
                        break;
                    case "50":
                        val2 = "Exceptional. Understood all issues. Always optimizes result.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val4" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q5">Achieved Similar Results</label>
                @switch (Model.question5)
                {
                    case "10":
                        val5 = "Does Not Meet Expectations. Experience and accomplishments are a mismatch.";
                        break;
                    case "20":
                        val5 = "Partially Meets Expectations. Some comparable accomplishments. Needs coaching.";
                        break;
                    case "30":
                        val5 = "Meets Expectations. Handled similar projects with very good results.";
                        break;
                    case "40":
                        val5 = "Exceeds Expectations. Environment and projects match with strong results.";
                        break;
                    case "50":
                        val5 = "Exceptional. Scope, motivational match with exceptional results.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val5" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q6">Planning and Executing</label>
                @switch (Model.question6)
                {
                    case "10":
                        val6 = "Does Not Meet Expectations. Poor planning, reactive approach.";
                        break;
                    case "20":
                        val6 = "Partially Meets Expectations. Tends to miss deadlines.";
                        break;
                    case "30":
                        val6 = "Meets Expectations. Prioritizes. Meets deadlines.";
                        break;
                    case "40":
                        val6 = "Exceeds Expectations.  Anticipates problems. Often Beats Deadlines.";
                        break;
                    case "50":
                        val6 = "Exceptional. Great planning and execution. Optimizes results.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val6" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q7">Continuous Improvement</label>
                @switch (Model.question7)
                {
                    case "10":
                        val7 = "Does Not Meet Expectations. Shows resistance to change.";
                        break;
                    case "20":
                        val7 = "Partially Meets Expectations. Slow to change. Has difficulty taking on new tasks.";
                        break;
                    case "30":
                        val7 = "Meets Expectations. Adjust well to new changes or work requirements.";
                        break;
                    case "40":
                        val7 = "Exceeds Expectations. Motivate to take on new tasks. Sees as a Learning opportunity.";
                        break;
                    case "50":
                        val7 = "Exceptional. Always shows initiative and enthusiasm towards new changes and work requirements.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val7" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q8">Environment and Motivational Fit</label>
                @switch (Model.question8)
                {
                    case "10":
                        val8 = "Does Not Meet Expectations. Mismatch";
                        break;
                    case "20":
                        val8 = "Partially Meets Expectations. Reasonable match, but with some considerations.";
                        break;
                    case "30":
                        val8 = "Meets Expectations. Solid match, no issues or concerns.";
                        break;
                    case "40":
                        val8 = "Exceeds Expectations. Will be very successful within this environment.";
                        break;
                    case "50":
                        val8 = "Exceptional. Will thrive, hit unexpected level of performance.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val8" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q9">Trend for Growth</label>
                @switch (Model.question9)
                {
                    case "10":
                        val9 = "Does Not Meet Expectations. No personal or business growth noted.";
                        break;
                    case "20":
                        val9 = "Partially Meets Expectations. Flat trend is consistent and positive.";
                        break;
                    case "30":
                        val9 = "Meets Expectations. Growth trend is consistent and positive.";
                        break;
                    case "40":
                        val9 = "Exceeds Expectations. Strong upward growth trend. Wants more.";
                        break;
                    case "50":
                        val9 = "Exceptional. Great upward trend. Needs big opportunity.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val9" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label for="q10">Character and Values</label>
                @switch (Model.question10)
                {
                    case "10":
                        val10 = "Does Not Meet Expectations. Mismatch in character and value system according to company values.";
                        break;
                    case "20":
                        val10 = "Partially Meets Expectations. Reasonable match, but with some considerations.";
                        break;
                    case "30":
                        val10 = "Meets Expectations. Solid match on values. No issues or concerns.";
                        break;
                    case "40":
                        val10 = "Exceeds Expectations. Demonstrates high respect, integrity, concern for others.";
                        break;
                    case "50":
                        val10 = "Exceptional. A role model Essence and Values.";
                        break;
                }
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@val10" readonly>
            </div>
        </div>
    </div>
    <!--Questions edn-->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="form-group">
                <label for="s">Candidate´s Strengths</label>
                <input type="text" id="s" class="form-control input-lg" name="Strengths" style="max-width:none;" required="required" value="@Model.Strengths" readonly>
                <label for="s" class="col-sm-7 col-sm-offset-3">(Please add at least 3 Candidates´s strengths for the position)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="form-group">
                <label for="w">Candidate´s Weaknesses</label>
                <input type="text" id="sw" class="form-control input-lg" name="Weaknesses" style="max-width:none;" required="required" value="@Model.Weaknesses" readonly>
                <label for="w" class="col-sm-7 col-sm-offset-3">(Please add at least 3 Candidates´s weaknesses for the position)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="form-group">
                <label for="r">Recommendations</label>
                <input type="text" id="r" class="form-control" name="Recommendations" style="max-width:none;" value="@Model.Recommendations" readonly>
                <label for="r" class="col-sm-7 col-sm-offset-4">(Internal Candidates Only)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="form-group">
                <label for="i">Interviewer</label>
                <input type="text" id="i" class="form-control" name="Interviewer" style="max-width:none;" required="required" value="@Model.Interviewer" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="form-group">
                <label for="do">Do your recommend this Candidate for the next step?</label>
                <input type="text" id="q1" class="form-control" style="max-width:none;" required="required" value="@Model.Continue" readonly>
            </div>
        </div>
    </div>
    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

</div>